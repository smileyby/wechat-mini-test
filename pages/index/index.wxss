/**index.wxss**/
.section {
  position: relative;
  background: #fff;
}
.section .title, .more {
  font-size: 32rpx;
  line-height: 109rpx;
  color: #101D37;
}
.section .title.bold {
  font-weight: bold;
}
.padding {
  padding: 46rpx 46rpx 0;
}
.more {
  float: right;
  font-size: 24rpx;
}
.placeholder {
  height: 160rpx;
  background: rgba(0,0,0,0.2)
}

/* header section */
.search {
  position: absolute;
  left: 50%;
  top: 10rpx;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 80%;
  height: 80rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  transform: translateX(-50%);
  background: rgba(255,255,255, .8);
  box-sizing: border-box;
}
.swiper-container {
  height: 300rpx;
  overflow: hidden;
}
.swiper-container .slide-image {
  width: 100%;
}
/* header section */

/* channel group */
.channel-group {
  margin: 0 -25rpx;
  background: #fff;
}
.channel-item {
  display: inline-block;
  width: 20%;
  text-align: center;
  font-size: 24rpx;
}

.channel-icon image {
  width: 96rpx;
  height: 96rpx;
}
.channel-title {
  font-size: 26rpx;
  color: #101D37;
}
/* channel group */

/* normal-tools */
.normal-tools-list {
  display: flex;
}
.normal-tools-list .tool {
  flex: 1;
  padding: 20rpx 30rpx;
  border: 1rpx solid #c8cac9;
  border-radius: 8rpx;
  margin-right: 20rpx;
  color: #101D37;
}
.normal-tools-list .tool:last-child {
  margin-right: 0;
}
.tool-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
}
.tool-dec {
  display: block;
  font-size: 20rpx;
  margin-top: 10rpx;
}
.tool-entry {
  display: block;
  font-size: 24rpx;
  margin-top: 10rpx;
}
/* normal-tools */

/* room */
.room-container, .big-room-list {
  display: flex;
}
.room-list {
  flex: 1;
  margin-right: 20rpx;
}
.room-list:last-child {
  margin-right: 0;
}
.room-view {
  width: 100%;
  height: 162rpx;
  position: relative;
  overflow: hidden;
}
.room-view .room-image {
  width: 100%;
  height: 100%;
}
.room-view .room-location {
  position: absolute;
  right: 8rpx;
  bottom: 8rpx;
  padding: 4rpx 8rpx;
  background: #fff;
  border-radius: 4rpx;
  font-size: 24rpx;
}
.room-name, .room-desc, .room-price {
  display: block;
  margin-top: 10rpx;
}
.room-name, .room-price {
  font-size: 28rpx;
  font-weight: bold;
}
.room-desc {
  font-size: 24rpx;
  color: #8b8b8b;
}
.room-price {
  color: #fa5741;
}
.big-room-list {
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #8b8b8b;
}
.big-room-list:last-child {
  border: none;
}
.big-room-list .room-info {
  flex: 1;
}
.big-room-list .room-image image {
  width: 216rpx;
  height: 162rpx;
  margin-right: 20rpx;
}
.big-room-list .room-name {
  margin-top: 0;
}
.big-room-list .room-price {
  display: inline-block;
  margin-right: 20rpx;
}
.room-tag .tag {
  display: inline-block;
  padding: 4rpx;
  margin-right: 10rpx;
  font-size: 24rpx;
  border-radius: 4rpx;
  color: #fff;
  background: rgba(48,114,246,1);
}
/* room */

