/* pages/map/map.wxss */
page {
  width: 100%;
  height: 100%;
}
.guide {
  position: absolute;
  right: 20px;
  top: 100px;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: rgba(0,0,0,.5);
  text-align: center;
  line-height: 80px;
  color: #fff;
  font-size: 28rpx;
}
.around-type-container {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50px;
  white-space: nowrap;
  background: rgba(51,51,51,.9);
}
.around-type-item {
  display: inline-block;
  width: 120rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 24rpx;
  color: #fff;
  position: relative;
}
.around-type-item:not(:last-child)::after {
  content: ' ';
  width: 1rpx;
  height: 100%;
  background: #fff;
  position: absolute;
  right: 0;
  top: 0;
  font-size: 0;
}
.around-type-item.active {
  color: #ff6700;
}